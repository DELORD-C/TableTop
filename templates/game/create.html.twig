{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-fluid d-flex justify-content-center flex-column align-items-center" style="min-height: calc(100vh - 96px)">
        <h1 class="mb-3">Créer une partie</h1>
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.game) }}
            {{ form_row(registrationForm.game_password) }}

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Créer</button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
