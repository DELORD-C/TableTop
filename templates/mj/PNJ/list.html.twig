{% extends 'mj.html.twig' %}

{% block main %}
    <div class="container-fluid px-4 d-flex justify-content-center align-items-center flex-column" style="min-height: calc(100vh - 125px)">
        <h1>Liste des PNJ</h1>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for pnj in pnjs %}
                    <tr>
                        <td><img alt="token" class="token" src="{{ asset('build/uploads/' ~ pnj.token.image) }}"></td>
                        <td><p>{{ pnj.name }}</p></td>
                        <td>
                            <a href="{{ path('app_mj_pnj_edit', {'pnj': pnj.id}) }}" class="btn btn-primary">Voir</a>
                            <a href="{{ path('app_mj_pnj_duplicate', {'pnj': pnj.id}) }}" class="btn btn-primary">Dupliquer</a>
                            <a href="{{ path('app_mj_pnj_delete', {'pnj': pnj.id}) }}" class="btn btn-danger" onclick="return(confirm('Voulez-vous vraiment supprimer {{ pnj.name}} ?'))">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}