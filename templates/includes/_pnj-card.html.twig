<div class="entity-card pnj-card{% if pnj.isPlaying %} playing{% endif %}" type="pnj" data-speed="{{ pnj.speed }}" id="{{ pnj.id }}">
    <div class="card text-white shadow-sm">
        <div class="card-body">
            <div>
                <div class="card-title d-flex justify-content-between align-items-center mb-1">
                    <h6 class="text-center">{{ pnj.name }}</h6>
                    <div>
                        <button class="fight-toggle btn btn-dark"><i class="bi bi-arrow-90deg-{{ pnj.isFighting ? "up" : "down" }}"></i></button>
                        <button class="fight-play btn btn-dark"><i class="bi bi-play"></i></button>
                    </div>
                </div>
                <div class="char-main updatable-object" type="PNJ">
                    <img src="{{ asset('build/uploads/' ~ pnj.token.image) }}">
                    <div class="char-controls">
                        <div class="stat-controls" stat="PV" type="PNJ" max="{{ pnj.PVM }}" id="{{ pnj.id }}">
                            <button class="btn btn-dark">-</button>
                            <p>
                                <i class="bi bi-heart-fill" style="color: red"></i>
                                <i class="mask" style="height: {% if pnj.PVM > 0 %}{{ 100 - (pnj.PV * 100 / pnj.PVM) }}{% else %}0{% endif %}%"></i>
                                <span class="updatable-stat" stat="PV">{{ pnj.PV }}</span>
                            </p>
                            <button class="btn btn-dark">+</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a target="_blank" href="{{ path('app_pnj_edit', {'pnj': pnj.id}) }}" class="card-footer d-flex align-items-center justify-content-between btn btn-dark">
            <p class="small text-white" style="margin: auto 0;">Modifier</p>
            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
        </a>
    </div>
</div>
